<!-- Snippets para crear una organizacion editable de la pagina -->
<openerp>
    <data>
        <template id="snippet_testimonial" name="Bena snippet">
            <section class="snippet_testimonial">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-md-4">
                           <img alt="client" class="img-circle" src="/theme_bena/static/img/client_1.jpg"/> 
                            <h3>Client Name</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                        <div class="col-md-4">
                            <img alt="client" class="img-circle" src="/theme_bena/static/img/client_2.jpg"/> 
                            <h3>Client Name</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                        <div class="col-md-4">
                            <img alt="client" class="img-circle" src="/theme_bena/static/img/client_3.jpg"/> 
                            <h3>Client Name</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Un sitio en el bar editor, que permita copiar y borrar en la pÃ¡gina -->
        <template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <t t-snippet="theme_bena.snippet_testimonial"
       t-thumbnail="/theme_bena/static/img/snippet_thumb.jpg"/> 
            </xpath>
        </template>
        
    </data>
</openerp>
